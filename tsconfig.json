{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"declaration": true,
		"esModuleInterop": true,
		"incremental": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"removeComments": false,
		"sourceMap": false,
		"skipLibCheck": false,
		"strict": true,
		"outDir": "lib",
		"lib": ["DOM", "ES2018"],
		"tsBuildInfoFile": ".output/.tsbuildinfo"
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		".output",
		"lib",
		"node_modules"
	]
}